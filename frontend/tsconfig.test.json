{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist-tests",
    "rootDir": ".",
    "module": "nodenext",
    "target": "es2019",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "noEmit": false,
    "declaration": false,
    "skipLibCheck": true
  },
  "include": [
    "tests/**/*.ts",
    "src/utils/**/*.ts",
    "src/lang/**/*.ts",
    "src/lang/**/*.tsx",
    "src/useAuth.tsx"
  ],
  "exclude": ["dist", "dist-tests", "node_modules"]
}
